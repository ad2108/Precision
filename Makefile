# Description:
#   Makefile to test all tests in this directory
# --------------------------------------------------

# --------------------------------------------------
COMP = python
C-FLAGS = -m unittest

# --------------------------------------------------
TESTS = $(wildcard *_test.py)

# --------------------------------------------------
all: $(TESTS)
	$(COMP) $(C-FLAGS) $^

# --------------------------------------------------
clean:
	rm -r __pycache__/

# --------------------------------------------------
# >>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>
# End of file
# >>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>
# --------------------------------------------------

